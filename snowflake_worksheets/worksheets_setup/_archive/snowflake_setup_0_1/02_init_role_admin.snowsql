use role ACCOUNTADMIN;

-- Create admin role for database management
create role JOB_ADS_ADMIN_ROLE;

-- Grant database and warehouse permissions to admin role
grant create database on ACCOUNT to role JOB_ADS_ADMIN_ROLE;
grant usage on WAREHOUSE COMPUTE_WH to role JOB_ADS_ADMIN_ROLE;

-- Assign admin role to account admin and developer
grant role JOB_ADS_ADMIN_ROLE to role ACCOUNTADMIN;
grant role JOB_ADS_ADMIN_ROLE to user anon_engineer;
